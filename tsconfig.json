{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    "baseUrl": ".",
    "paths": {
      "@fonts/*": ["public/fonts/*"],
      "@images/*": ["public/images/*"],

      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"]
    }
  }
}
